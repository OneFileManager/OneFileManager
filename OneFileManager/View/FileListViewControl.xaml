<UserControl
    x:Class="OneFileManager.View.FileListViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OneFileManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">

        <TreeView MinWidth="225" DockPanel.Dock="Left">
            <TreeViewItem Header="我的电脑">
                <TreeViewItem Header="本地磁盘(C:)" />
                <TreeViewItem Header="本地磁盘(D:)" />
                <TreeViewItem Header="本地磁盘(E:)" />
            </TreeViewItem>
        </TreeView>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" Header="名称" />
                    <GridViewColumn Width="100" Header="修改日期" />
                    <GridViewColumn Width="100" Header="类型" />
                    <GridViewColumn Width="100" Header="大小" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
