<UserControl
    x:Class="OneFileManager.View.FileListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OneFileManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ListView x:Name="lvwFiles">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding FileName}"
                        Header="名称" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding ModifiedDate}"
                        Header="修改日期" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding FileType}"
                        Header="类型" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding FileSize}"
                        Header="大小" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
