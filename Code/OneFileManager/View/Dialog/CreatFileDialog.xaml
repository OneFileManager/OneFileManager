<Window
    x:Class="OneFileManager.View.Dialog.CreatFileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OneFileManager.View.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="新建文件"
    Width="400"
    Height="120"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
            <Label
                Width="100"
                VerticalContentAlignment="Center"
                BorderThickness="0"
                Content="文件名:" />
            <TextBox x:Name="FileName" Width="250" VerticalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Margin="0,5,0,5" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Name="okButton" Click="okButton_Click" IsDefault="True">OK</Button>
            <Button
                Name="cancelButton"
                Margin="5,0,5,0"
                Click="cancelButton_Click"
                IsCancel="True">
                Cancel
            </Button>
        </StackPanel>

    </StackPanel>
</Window>
